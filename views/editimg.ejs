<%- include('header') -%>



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Editar Imagen</title>
</head>
<body>
    <div>
        <form action="/updateimg/<%= imagenes.id %>" method="post">
            <div class="form-group row">
            <label class="col-form-label col-sm-2" for="url">Url</label>
            <input type="text" name="url" id="url" value="<%= imagenes.url %>" required maxlength="25" minlength="3">
        </div>


        <div class="form-group row">
            <label class="col-form-label col-sm-2" for="destacado">Destacado</label>
            <select name="destacado" id="destacado">
                <option value="">--Seleccione--</option>
                <option value="Si">Si</option>
                <option value="No">NO</option>
            </select>
        </div>


            <div class="col-form-label col-sm-15">
                <input type="submit" value="actualizar" class="btn btn-default btn-success">
                <a class="btn btn-outline-dark cancel" href="/imagenes">Cancelar</a>
            </div>
        </form>
    </div>
</body>
</html>

<%- include('footer') -%>