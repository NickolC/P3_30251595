<%- include('header') -%>

    <title>Pagina Categorias</title>
</head>
<body>
    <h1>Pagina Categorias <%= categorias.length %></h1>

    <div class="table-responsive-sm" style="width: 750px;">
        <table class="table table-hover">
            <thead>
            <tr>
                <th>NÂ°</th>
                <th>Nombre</th>
                <th class="d-print-none"> <a class="btn btn-sm btn-success" href="/ctgagg">Agregar</a> </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <% if (categorias) { %>
                    <% for (let i = 0; i < categorias.length; i++){  %>
                        <% if (categorias) { %>
                            <tr>
                                <td><%= (i + 1) %></td>
                                <td><%= categorias[i].nombre %></td>
                                <td>
                                    <div class="input-group">
                                        <td class="fijo">
                                        <a href="/ctgdelete/<%= categorias[i].id%>" class="btn btn-sm btn-danger">Eliminar</a>
                                        </td>
                                        <td class="fijo">
                                        <a href="/ctgedit/<%= categorias[i].id%>" class="btn btn-sm btn-warning">Actualizar</a>
                                        </td>
                                    </div>
                                </td>
                            </tr>    
                        <% } %>
                    <% } %>
                <% } else { %>
                        <tr>
                            <th>No hay categorias en el sistema</th>
                        </tr>
                    <% }   %>
            </tr>
        </tbody>
        </table>
    </div>
</body>
</html>

