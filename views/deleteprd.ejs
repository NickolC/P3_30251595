<%- include('header') -%>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Eliminar Producto</title>
</head>
<body>
    <div>
        <h1>¿Está seguro de eliminar este producto?</h1>
        <form action="/deleteprd/<%= productos.id %>" method="get">
            <h4><%= productos.nombre %></h4>
            <h4><%= productos.codigo %></h4>
            <h4><%= productos.precio %></h4>
            <h4><%= productos.marca %></h4>
            <h4><%= productos.tono %></h4>
            <h4><%= productos.descripcion %></h4>

            <div class="col-sm-10">
                <input type="submit" value="eliminar producto" class="btn btn-default btn-danger">
                <a class="btn btn-outline-dark cancel" href="/productos">Cancelar</a>
            </div>
        </form>
    </div>
</body>
</html>

