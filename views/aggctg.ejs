<%- include('header') -%>
<title>Agregar Categoria</title>
<h1>Agregar Categoria</h1>

<form action="/aggctg" method="post">
    <div class="form-horizontal">
        <div class="form-group row">
            <label class="col-form-label col-sm-2"></label>
            <div class="formulario">
                <div class="form-group row">
                    <label class="col-form-label col-sm-2" for="nombre">Nombre</label>
                    <input autofocus type="text" name="nombre" id="nombre" placeholder="Ingrese el nombre de la categoria" required maxlength="25" minlength="3">
                </div>
                <div class="col-form-label col-sm-15">
                <input type="submit" value="Crear Categoria" class="btn btn-default btn-success">
                <a class="btn btn-outline-dark cancel" href="/categorias">Cancelar</a>
            </div>
            </div>
        </div>
    </div> 
</form>




